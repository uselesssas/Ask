<%# title %>
<% provide :page_title, 'Edit answer' %>

<%# header меню %>
<% currently_at 'Questions' %>

<h1 class="mb-4">Edit answer</h1>

<%# Проверка пользовательского ввода %>
<%= render 'shared/errors', object: @answer %>

<%# Форма создания ответа для конкретного вопроса %>
<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit answer", class: 'btn btn-primary' %>
  <%= link_to 'Back', question_path(@question), class: 'btn btn-secondary' %>
<% end %>
