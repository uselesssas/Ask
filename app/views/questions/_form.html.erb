<%# Форма отправки и редактирования нового вопроса %>
<%= form_with model: @question do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%# Проверка пользовательского ввода на клиенте и на сервере %>
      <%= f.text_field :title, required: true, minlenght: 2, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%# Проверка пользовательского ввода на сервере %>
      <%= f.text_field :body, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit 'Submit question', class: 'btn btn-success' %>
  <%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>
<% end %>
