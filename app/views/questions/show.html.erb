<%# title %>
<% provide :page_title, @question.title %>

<%# Вопрос %>
<div>
  <h1 class="mb-4"><%= @question.title %></h1>

  <time datetime="<%= @question.formatted_created_at %>">
    <%= @question.formatted_created_at %>
  </time>

  <p class="lead my-3"><%= @question.body %></p>
</div>

<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-primary' %>
<%= link_to 'Delete', question_path(@question), data: { method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>

<hr class="my-3">

<h2>Write your answer</h2>

<%# Форма создания ответа для конкретного вопроса %>
<%= render 'answers/form' %>

<hr class="my-3">

<%# Ответы %>
<h2 class="mt-3">Answers</h2>
<% @answers.each do |a| %>
  <article class="mb-3">
    <time datetime="<%= a.formatted_created_at %>">
      <%= a.formatted_created_at %>
    </time>
    <p><%= a.body %></p>

    <%= link_to 'Edit', edit_question_answer_path(@question, a), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Delete', question_answer_path(@question, a), class: 'btn btn-danger btn-sm',
                data: { method: :delete, confirm: 'Are you sure?' } %>
  </article>
<% end %>
